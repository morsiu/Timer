<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="Timers" Height="350" Width="525">
    <Window.Resources>
        <local:Actions x:Key="Actions"/>
        <local:RunActionsCommand x:Key="RunActions"/>
    </Window.Resources>
    <StackPanel>
        <DataGrid ItemsSource="{StaticResource Actions}" />
        <ToolBar>
            <Button Content="Run" CommandParameter="{StaticResource Actions}" Command="{StaticResource RunActions}" />
            <Button Content="Stop" Command="{Binding Cancel, Source={StaticResource RunActions}}" />
            <TextBox Text="{Binding SetCount, Source={StaticResource RunActions}}" />
            <Button Content="+" Command="{Binding AddSet, Source={StaticResource RunActions}}" />
            <Button Content="-" Command="{Binding RemoveSet, Source={StaticResource RunActions}}" />
        </ToolBar>
    </StackPanel>
</Window>
