<Window
    x:Class="Timer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Timer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:workoutPlanning="http://timer/workoutPlanning"
    Title="Timers"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Window.Resources>
        <workoutPlanning:WorkoutExpression
            x:Key="RoundWorkouts"/>
        <workoutPlanning:WorkoutRoundCount
            x:Key="RoundCount" />
        <local:TrackWorkoutPlanCommand
            x:Key="TrackWorkoutPlan"
            RoundCount="{Binding RoundCount, Source={StaticResource RoundCount}}"
            WorkoutPlan="{Binding WorkoutPlan, Source={StaticResource RoundWorkouts}}" />
    </Window.Resources>
    <StackPanel>
        <TextBox Text="{Binding Value, Source={StaticResource RoundWorkouts}, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="{Binding ActualValue, Source={StaticResource RoundWorkouts}}"/>
        <ToolBar>
            <Button
                Command="{StaticResource TrackWorkoutPlan}"
                Content="Start" />
            <Button
                Command="{Binding Cancel, Source={StaticResource TrackWorkoutPlan}}"
                Content="Stop" />
            <TextBox
                Text="{Binding Value, Source={StaticResource RoundCount}}" />
            <Button
                Command="{Binding AddRound, Source={StaticResource RoundCount}}"
                Content="+" />
            <Button
                Command="{Binding RemoveRound, Source={StaticResource RoundCount}}"
                Content="-" />
        </ToolBar>
        <ItemsControl
            ItemsSource="{Binding WorkoutsOfCurrentSegment, Source={StaticResource TrackWorkoutPlan}}" />
    </StackPanel>
</Window>